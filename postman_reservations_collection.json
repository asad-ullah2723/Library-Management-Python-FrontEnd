{
  "info": {
    "_postman_id": "reservations-collection",
    "name": "Library Reservations API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "List Reservations",
      "request": {
        "method": "GET",
        "header": [ { "key": "Accept", "value": "application/json" } ],
        "url": { "raw": "{{base_url}}/reservations/", "host": ["{{base_url}}"], "path": ["reservations", ""] }
      }
    },
    {
      "name": "Create Reservation",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "body": { "mode": "raw", "raw": "{\n  \"reservation_id\": \"RESV-0001\",\n  \"book_id\": 10,\n  \"member_id\": 1,\n  \"reservation_date\": \"2025-09-19\",\n  \"status\": \"Active\"\n}" },
        "url": { "raw": "{{base_url}}/reservations/", "host": ["{{base_url}}"], "path": ["reservations", ""] }
      }
    },
    {
      "name": "Get Reservation",
      "request": {
        "method": "GET",
        "header": [ { "key": "Accept", "value": "application/json" } ],
        "url": { "raw": "{{base_url}}/reservations/:id", "host": ["{{base_url}}"], "path": ["reservations", ":id"] }
      }
    },
    {
      "name": "Update Reservation",
      "request": {
        "method": "PUT",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "body": { "mode": "raw", "raw": "{\n  \"reservation_id\": \"RESV-0001\",\n  \"book_id\": 10,\n  \"member_id\": 1,\n  \"reservation_date\": \"2025-09-20\",\n  \"status\": \"Fulfilled\"\n}" },
        "url": { "raw": "{{base_url}}/reservations/:id", "host": ["{{base_url}}"], "path": ["reservations", ":id"] }
      }
    },
    {
      "name": "Delete Reservation",
      "request": {
        "method": "DELETE",
        "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "url": { "raw": "{{base_url}}/reservations/:id", "host": ["{{base_url}}"], "path": ["reservations", ":id"] }
      }
    }
  ],
  "variable": [ { "key": "base_url", "value": "http://localhost:9000" }, { "key": "token", "value": "" } ]
