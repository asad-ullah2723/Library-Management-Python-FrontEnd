{
  "info": {
    "name": "Library API - Reservations",
    "_postman_id": "resv-collection-001",
    "description": "Postman collection for Reservations endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "List Reservations",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{base_url}}/reservations/?skip=0&limit=20"
      }
    },
    {
      "name": "Create Reservation",
      "request": {
        "method": "POST",
        "header": [
          {"key":"Content-Type","value":"application/json"},
          {"key":"Authorization","value":"Bearer {{token}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"reservation_id\": \"RESV-0001\",\n  \"book_id\": 10,\n  \"member_id\": 1,\n  \"reservation_date\": \"2025-09-19\",\n  \"status\": \"Active\"\n}"
        },
        "url": "{{base_url}}/reservations/"
      }
    },
    {
      "name": "Get Reservation",
      "request": {"method": "GET", "header": [], "url": "{{base_url}}/reservations/{{id}}"}
    },
    {
      "name": "Update Reservation",
      "request": {
        "method": "PUT",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "body": {"mode":"raw","raw":"{\n  \"reservation_id\": \"RESV-0001\",\n  \"book_id\": 10,\n  \"member_id\": 1,\n  \"reservation_date\": \"2025-09-19\",\n  \"status\": \"Fulfilled\"\n}"},
        "url": "{{base_url}}/reservations/{{id}}"
      }
    },
    {
      "name": "Delete Reservation",
      "request": {"method":"DELETE","header":[],"url":"{{base_url}}/reservations/{{id}}"}
    }
  ],
  "variable": [
    {"key":"base_url","value":"http://localhost:9000"},
    {"key":"token","value":""}
  ]
}

